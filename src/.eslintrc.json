{
  "root": true,
  "ignorePatterns": ["**/node_modules/**", "**/dist/**", "**/coverage/**", "**/.(idea|git|cache|output|temp)/**"],

  // handle:
  // x typescript react files
  // x cypress test files
  // x .test. files
  // x .js dev/utility files
  "overrides": [
    {
      // Jest *.test.js files
      "files": ["**/*.test.js"],
      "extends": ["eslint:recommended", "plugin:jest/recommended", "plugin:jest/style", "prettier"],
      "env": {
        "jest/globals": true,
        "browser": true
      },
      "plugins": ["jest", "istanbul"],
      "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "modules": true
      },
      "rules": {
        "istanbul/no-ignore-file": "warn",
        "istanbul/prefer-ignore-reason": "off",
        "jest/expect-expect": "off",
        "jest/no-conditional-expect": "off"
      }
    },
    {
      // All other js files
      "files": ["**/*.js"],
      "excludedFiles": ["*.test.*", "*.helper.*", "*.original.*"],
      "extends": ["eslint:recommended", "prettier"],
      "env": {
        "browser": true,
        "es6": true
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "modules": true
      }
    },
    {
      // All typescript + react files (.ts + .tsx)
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["../tsconfig.json"]
      },
      "files": ["**/*.ts", "**/*.tsx"],
      "excludedFiles": ["*.test.*", "*.helper.*"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:react/jsx-runtime",
        "prettier"
      ],
      "plugins": ["react"],
      "env": {
        "browser": true
      },
      "settings": {
        "react": {
          "version": "detect"
        },
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
          "typescript": {
            "alwaysTryTypes": true
          },
          "project": ["../tsconfig.json"]
        }
      },

      "rules": {
        "react/no-unescaped-entities": "off",
        "import/named": "error",
        "import/first": "warn",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ],
  "rules": {
    // fixes conflict with prettier about formatting width
    "max-len": ["warn", { "code": 150, "tabWidth": 2 }]
  }
}
