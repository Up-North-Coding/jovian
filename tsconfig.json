{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src",
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "__tests__", "setupTests.js"],
  "exclude": ["**/node_modules/**", "**/dist/**", "coverage/**.*", "cypress/**.*", "proxy/**.*", "**/.nyc_output/**", "**/.git/**", "**/.cache/**", "**/.temp/**"]
}
